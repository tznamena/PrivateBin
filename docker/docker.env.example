# PrivateBin Docker Environment Configuration
# Copy this file to .env and adjust the values for your environment

# Application Configuration
PRIVATEBIN_NAME=PrivateBin
PRIVATEBIN_BASEPATH=https://paste.example.com/

# Database Configuration (for production)
MYSQL_ROOT_PASSWORD=secure_root_password
MYSQL_DATABASE=privatebin
MYSQL_USER=privatebin
MYSQL_PASSWORD=secure_database_password

# Redis Configuration (optional)
REDIS_PASSWORD=secure_redis_password

# S3 Storage Configuration (optional)
S3_ENDPOINT=https://s3.amazonaws.com
S3_REGION=us-east-1
S3_BUCKET=privatebin-data
S3_ACCESS_KEY=your_access_key
S3_SECRET_KEY=your_secret_key

# SSL Configuration (for production with Nginx)
SSL_CERT_PATH=./docker/nginx/ssl/cert.pem
SSL_KEY_PATH=./docker/nginx/ssl/key.pem

# Development Settings
XDEBUG_MODE=debug,coverage
PHP_IDE_CONFIG=serverName=privatebin-dev